<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Zds.IconButton.Primary" parent="Widget.Material3.Button.IconButton">
        <item name="backgroundTint">@drawable/button_selector</item>
        <item name="colorContainer">@color/zebra_blue_enabled</item>
        <item name="colorOnSurface">@color/zebra_grey_disabled</item>
        <item name="rippleColor">@color/zebra_blue_pressed</item>
        <item name="iconTint">@color/textPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="cornerRadius">4dp</item>
