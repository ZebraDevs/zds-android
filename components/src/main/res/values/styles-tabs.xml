<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Zds.TabLayout" parent="Widget.Design.TabLayout">
        <item name="colorSurface">@color/zebra_toolbar</item>
        <item name="colorPrimary">@color/textPrimary</item>
        <item name="colorOnSurface">@color/zebra_hint</item>
        <item name="colorControlHighlight">@color/zebra_hint</item>
        <item name="tabInlineLabel">true</item>
        <item name="colorAccent">@color/zebra_blue_enabled</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/zebra_blue_enabled</item>
        <item name="tabTextAppearance">@style/Zds.TabItem</item>
        <item name="tabBackground">@color/zebra_toolbar</item>
        <item name="android:textColorSecondary">@color/zebra_hint</item>
        <item name="tabIconTint">@color/mtrl_tabs_legacy_text_color_selector</item>
    </style>

    <style name="Zds.TabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>