<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ZdsBase" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/zebra_black_toolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorContainer">@color/zebra_blue_enabled</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorSurfaceVariant">@android:color/white</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textPrimaryVariant</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="colorControlNormal">@color/textPrimary</item>
        <item name="android:statusBarColor">@color/zebra_black_toolbar</item>
        <item name="materialButtonStyle">@style/Zds.Button.Primary</item>
        <item name="toolbarStyle">@style/Zds.Toolbar</item>
