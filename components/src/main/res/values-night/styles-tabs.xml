<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Zds.TabLayout" parent="Widget.Design.TabLayout">
        <item name="colorSurface">@color/textPrimaryVariant</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="tabInlineLabel">true</item>
        <item name="colorAccent">@color/zebra_blue_enabled</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/zebra_blue_enabled</item>
        <item name="tabTextAppearance">@style/Zds.TabItem</item>
        <item name="tabBackground">@color/background</item>
        <item name="android:textColorSecondary">@color/textPrimaryVariant</item>
        <item name="tabIconTint">@color/colorAccent</item>
    </style>

    <style name="Zds.TabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textPrimaryVariant</item>
    </style>

</resources>